/* pages/pointsmall/recorddetail/recorddetail.wxss */
page{
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
}
.record-item-wrap{margin-top: 30rpx;background-color: #fff;}
.record-item{
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.record-item-left{
  width: 30%;
}
.record-item-right{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.record{
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.record-left{
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #eee;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-right: 30rpx;
  overflow: hidden;
}
.record-left image{
  width: 100%;
  height: 100%;
}
.record-mid{
  width: 410rpx;
}
.record-mid-title{
  font-size: 33rpx;
}
.record-mid-points{
  font-size: 24rpx;
  color: #e72427;
  margin: 40rpx 0 20rpx 0;
}
.record-mid-num{
  font-size: 24rpx;
  color: #999;
}
.record-right{
  height: 160rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}
