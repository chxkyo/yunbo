/* pages/mallactivity/activitydetail/activitydetail.wxss */
page{
  width: 100%;
  padding-bottom: 135rpx;
  background: #f5f5f5;
}
.subscribedetail-head{
  width: 100%;
  height: 400rpx;
}
.subscribedetail-head image{
  width: 100%;
  height: 400rpx;
}
.subscribedetail-title{
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  font-weight: bold;
  background: #fff;
  margin-bottom: 30rpx;
}
.subscribedetail-time{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.subscribedetail-time-item{
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.subscribedetail-time-item:last-child{
  border-bottom: none;
}
.subscribedetail-time-itemLeft{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.subscribedetail-time-itemLeft image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.subscribedetail-time-itemLeft text{
  font-size: 28rpx;
}
.subscribedetail-time-itemRight{
  font-size: 28rpx;
}

.subscribedetail-con{
  width: 100%;
}
.subscribedetail-con-head{
  padding: 50rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.subscribedetail-con-head image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.subscribedetail-con-head text{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.subscribedetail-con-foot{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 28rpx;
  line-height: 1.4;
}
.subscribedetail-foot{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.subscribedetail-foot-left{
  width: 70%;
  padding: 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #000;
}
.subscribedetail-foot-right{
  width: 30%;
  height: 100%;
  font-size: 28rpx;
  color: #fff;
  background: #e72427;
  display: flex;
  justify-content: center;
  align-items: center;
}
.gray{
  background: #999;
}