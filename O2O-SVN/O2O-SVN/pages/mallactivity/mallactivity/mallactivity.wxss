/* pages/mallactivity/mallactivity/mallactivity.wxss */
page{
  background: #f5f5f5;
}
.mysubscribe{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.mysubscribe-item{
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
  box-shadow: 0 2rpx 2rpx 2rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}
.mysubscribe-item:last-child{
  margin-bottom: 0;
}
.mysubscribe-item image{
  width: 100%;
  height: 300rpx;
}
.mysubscribe-item-form{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.mysubscribe-item-form button{
  width: 100%;
  height: 100%;
  opacity: 0;
}
.state{
  width: 160rpx;
  height: 50rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: -2rpx 2rpx 2rpx 2rpx rgba(0,0,0,0.2);
}
.state image{
  width: 27rpx;
  height: 27rpx;
  margin-right: 10rpx;
}
.state text{
  font-size: 22rpx;
  color: #fff;
}
.state1{
  background: #427aeb;
}
.state2{
  background: #5ebe69;
}
.state3{
  background: #eb4742;
}
.state4{
  background: #797979;
}
.no-content{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #999;
}