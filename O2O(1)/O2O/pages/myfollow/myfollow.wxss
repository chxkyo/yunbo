/* pages/follow/follow.wxss */
page{
  background: #f5f5f5;
}
.follow{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.follow-item{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx;
}
.follow-item-left{
  margin-right: 50rpx;
}
.follow-item-left image{
  width: 110rpx;
  height: 110rpx;
}
.follow-item-mid{
  width: 50%;
}
.follow-item-mid-title{
  font-size: 24rpx;
  color: #000;
  margin-bottom: 60rpx;
}
.follow-item-mid-address{
  font-size: 20rpx;
  color: #cccccc;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.follow-item-mid-address image{
  width: 16rpx;
  height: 20rpx;
  margin-right: 20rpx;
}
.follow-item-right{
  width: 165rpx;
  height: 55rpx;
  border: 2rpx solid #999;
  border-radius: 100rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.follow-item-right image{
  width: 25rpx;
  height: 18rpx;
  margin-right: 12rpx;
}
.no-content{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #999;
}