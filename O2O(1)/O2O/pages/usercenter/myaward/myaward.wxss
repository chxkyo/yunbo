/* pages/myaward/myaward.wxss */
page{
  background: #f5f5f5;
}
.myaward{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.myaward-item{
  width: 100%;
  background: #fce5e3;
  border-radius: 10rpx;
  color: #e71a28;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}
.myaward-itemLeft{
  width: 68%;
  padding: 30rpx;
  box-sizing: border-box;
  border-right: 1rpx dashed #fca097;
}
.myaward-itemLeft-title{
  font-size: 46rpx;
  margin-bottom: 40rpx;
}
.myaward-itemLeft-type{
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.myaward-itemLeft-date{
  font-size: 18rpx;
}
.myaward-itemRight{
  width: 32%;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.circle{
  width: 30rpx;
  height: 30rpx;
  background: #f5f5f5;
  border-radius: 100%;
  position: absolute;
}
.circle-top{
  top: -15rpx;
  left: 68%;
  transform: translateX(-15rpx);
}
.circle-bot{
  bottom: -15rpx;
  left: 68%;
  transform: translateX(-15rpx);
}
.no-content{
  width: 100%;
  height: 100vh;
  font-size: 30rpx;
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
}