/* pages/marketsearch/marketsearch.wxss */
page{
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
}
.triangle_down{
  width:0;
  height:0;
  border-width:5px 5px 0;
  border-style:solid;
  border-color:#afaca6 transparent transparent;
  margin-left: 10rpx;
  transition: all .3s;
}
.rotate{
  transform: rotate(180deg);
}
.marketguide-head{
  width: 100%;
  height: 100rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.marketguide-headLeft{
  width: 500rpx;
  height: 60rpx;
  padding: 0 30rpx;
  background: #eee;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.marketguide-headLeft image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
.marketguide-headLeft input{
  font-size: 24rpx;
  flex: 1;
}
.marketsearch-right{
  width: 100rpx;
  height: 60rpx;
  background: #e71a28;
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}