/* pages/addselfhelppoints/addselfhelppoints.wxss */
page{
  width: 100%;
  height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}
.points{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
}
.points-head{
  font-size: 30rpx;
  text-align: center; 
  margin-bottom: 20rpx;
}
.points-items{
  width: 100%;
}
.points-item{
  width: 100%;
  padding: 30rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #f5f5f5;
}
.points-itemLeft{
  width: 30%;
  font-size: 30rpx;
}
.points-itemRight{
  flex: 1;
  text-align: right;
  font-size: 30rpx;
}
.grayColor{
  color: #d7d7d7;
}
.upload-tickets{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 100rpx;
  background: #e71a28;
  color: #fff;
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}
.upload-tips{
  font-size: 26rpx;
  color: #c8c8c8;
  text-align: center;
  margin-bottom: 40rpx;
}
.upload-img{
  width: 100%;
  height: 300rpx;
  background: #eee;
}
.upload-check{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 100rpx;
  background: #b5b5b5;
  color: #fff;
  font-size: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}
.end-tips{
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  color: #c0bebe;
}