.custom-modal-wrap{font-size: 32rpx;background-color: #fff;}
.custom-modal-wrap .modal-header{position:relative;margin-bottom:50rpx;font-size:34rpx;font-weight: 700}
.mask{position: absolute;left: 0;right: 0;top: 0;bottom: 0;display: flex;justify-content: center;align-items: center;background-color: rgba(0,0,0,0.4);
 z-index:1;
}
.modal-content-wrap{position: absolute;width: 80%;top:50%;transform:translate3d(0,-50%,0);left:0;right:0;margin:auto;padding:30rpx;border-radius:8rpx;background-color: #fff;z-index: 1}
.modal-close-icon{position:absolute;width:32rpx;height: 32rpx;right: 0px;top:0;bottom: 0;margin: auto}
.modal-footer{margin-top: 50rpx;}