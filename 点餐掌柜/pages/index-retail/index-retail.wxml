<!--index-retail.wxml-->
<view class="container">
  <view class="mian-content-wrap">
    <view class="mine-info">
      <view class="mine-info-left">
        <view><text class="mine-name">匠人牛品</text></view>
        <view style="margin-top:20rpx"><image class="time-icon" src="../../images/img/time.png"></image><text class="mine-now-time">2018-09-27 22:28:12</text></view>
      </view>
      <view class="mine-info-right">
        <image class="weather-icon" src="../../images/img/sun.png"></image>
      </view>
    </view>
    <view class="today-info-wrap">
      <view class="today-item confirm-btn">
        <view class="today-item-num"><text>11111</text></view>
        <view><text>今日销售额</text></view>
      </view>
      <view class="today-item confirm-btn">
        <view class="today-item-num"><text>54</text></view>
        <view><text>交易笔数</text></view>
      </view>
      <view class="today-item confirm-btn">
        <view class="today-item-num"><text>213</text></view>
        <view><text>到店人数</text></view>
      </view>
      <view class="today-item confirm-btn">
        <view class="today-item-num"><text>213.12</text></view>
        <view><text>客单价</text></view>
      </view>
    </view>
    <view class="navigator-box-wrap">
      <view class="navigator-item">
        <navigator hover-class="none" url="../areamanage/areamanage">
          <view class="navigator-item-icon-wrap">
            <image src="../../images/img/goodsgl.png"></image>
          </view>
          <view class="navigator-item-desc"><text>商品管理</text></view>
        </navigator>
      </view>

      <view class="navigator-item">
        <navigator hover-class="none" url="../systemset/systemset">
          <view class="navigator-item-icon-wrap">
            <image src="../../images/img/xtsz.png"></image>
          </view>
          <view class="navigator-item-desc"><text>系统设置</text></view>
        </navigator>
      </view>
      <view class="navigator-item">
        <navigator hover-class="none" url="../salesstatistics/salesstatistics">
          <view class="navigator-item-icon-wrap">
            <image src="../../images/img/tjbb.png"></image>
          </view>
          <view class="navigator-item-desc"><text>统计报表</text></view>
        </navigator>
      </view>
    </view>
    <view class="echarts-wrap-module">
      <view class="echarts-inner-wrap">
        <view class="echarts-title"><image src="../../images/img/indextitleicon.png" class="echarts-title-icon"></image><text>日营业数据</text></view>
        <view class="echarts-turnover"><text>11981</text></view>
        <view class="echarts-wrap">
          <ec-canvas id="mychart-dom-multi-pie1" canvas-id="mychart-dayopendata-pie1" ec="{{ dayopendata }}"></ec-canvas>
        </view>
        <view class="echarts-pay-wrap">
          <view class="echarts-pay-item">
            <view class="icon-circle wx-color"></view>
            <view class="echarts-pay-per"><text>21%</text></view>
            <view class="echarts-pay-method"><text>微信支付</text></view>
          </view>
          <view class="echarts-pay-item">
            <view class="icon-circle al-color"></view>
            <view class="echarts-pay-per"><text>29%</text></view>
            <view class="echarts-pay-method"><text>支付保支付</text></view>
          </view>
          <view class="echarts-pay-item">
            <view class="icon-circle bank-color"></view>
            <view class="echarts-pay-per"><text>25%</text></view>
            <view class="echarts-pay-method"><text>银行卡支付</text></view>
          </view>
          <view class="echarts-pay-item">
            <view class="icon-circle other-color"></view>
            <view class="echarts-pay-per"><text>25%</text></view>
            <view class="echarts-pay-method"><text>其它支付</text></view>
          </view>
        </view>
      </view> 
    </view>
    <view class="echarts-wrap-module">
      <view class="echarts-inner-wrap">
        <view class="echarts-title"><image src="../../images/img/indextitleicon.png" class="echarts-title-icon"></image><text>周营业数据</text></view>
        <view class="echarts-turnover"><text>11981</text></view>
        <view class="echarts-wrap">
          <ec-canvas id="mychart-dom-multi-bar1" canvas-id="mychart-weekopendata-bar1" ec="{{ weekopendata.bar }}"></ec-canvas>
