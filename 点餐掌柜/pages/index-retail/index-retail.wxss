/**index.wxss**/
.mian-content-wrap{padding: 30rpx 40rpx;}
.mine-info{display: flex;justify-content: space-between}
.mine-info-left{flex: 1;display: flex;flex-direction: column;font-size: 12px;}
.mine-name{font-size: 18px;color: #000;font-weight: bold;}
.mine-info-left .time-icon{margin-right: 20rpx; vertical-align: -2rpx;} 
.mine-info-right{width: 100rpx;height: 100rpx;}
.mine-info-right .weather-icon{width: 100%;height: 100%}
.mine-now-time{color: #cdcdcd}
.today-info-wrap{display: flex;margin:40rpx 0;flex-wrap: wrap;justify-content: space-between}
.today-item{width: 49%;height: 200rpx;margin-bottom:20rpx;text-align: center;border-radius: 16rpx;font-size: 28rpx;color: #fff }
.today-item .today-item-num{margin:40rpx 0 16rpx 0 ;font-size:64rpx;font-weight: bold;}
.navigator-box-wrap{display: flex;justify-content: space-between}
.navigator-item{text-align: center;font-size: 28rpx;}
.navigator-item-icon-wrap{width: 120rpx;height: 120rpx;margin: 0 auto 16rpx;}
.navigator-item-icon-wrap image{width: 100%;height: 100%}
.echarts-wrap-module{padding: 30rpx;margin-top: 40rpx;box-shadow: 0 0 10px rgba(0,0,0,.05)}
.echarts-wrap{height: 450rpx;margin-top: -5px;}
.echarts-title-icon{width: 28rpx;height: 28rpx;vertical-align: -2rpx;margin-right: 10rpx;}
.echarts-title{font-size: 32rpx;font-weight: 700}
.echarts-turnover{position:relative;margin-top: 40rpx;font-size: 62rpx;color: #3f96fd;text-align: center;z-index: 99999}
.echarts-pay-wrap{display: flex;width: 100%;flex-wrap: wrap;justify-content: space-between}
.echarts-pay-item{width:28%;position:relative;padding-left:30rpx;font-size: 12px;color: #b9b9b9;   box-sizing: border-box;}
.echarts-pay-per{font-size: 32rpx;color:#333;font-weight: 700}
.icon-circle{position: absolute;left:0;bottom:20rpx;width: 14rpx;height: 14rpx;border-radius: 50%;}