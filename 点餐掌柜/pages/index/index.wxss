/**index.wxss**/
.mian-content-wrap{padding: 30rpx 40rpx;}
.mine-info{display: flex;justify-content: space-between}
.mine-info-left{flex: 1;display: flex;flex-direction: column;font-size: 12px;}
.mine-name{font-size: 18px;color: #000;font-weight: bold;}
.mine-info-left .time-icon{margin-right: 20rpx; vertical-align: -2rpx;} 
.mine-info-right{width: 100rpx;height: 100rpx;}
.mine-info-right .weather-icon{width: 100%;height: 100%}
.today-info-wrap{display: flex;margin:40rpx 0;flex-wrap: wrap;justify-content: space-between}
.today-item{width: 49%;height: 200rpx;margin-bottom:20rpx;text-align: center;border-radius: 16rpx;font-size: 30rpx;color: #fff }
.today-item .today-item-num{margin:40rpx 0 16rpx 0 ;font-size:64rpx;font-weight: bold;}
.navigator-box-wrap{display: flex;justify-content: space-between}
.navigator-item{text-align: center;font-size: 28rpx;}
.navigator-item-icon-wrap{width: 120rpx;height: 120rpx;margin: 0 auto 16rpx;}
.navigator-item-icon-wrap image{width: 100%;height: 100%}
.echarts-wrap{margin-top:50rpx;height: 600rpx; }