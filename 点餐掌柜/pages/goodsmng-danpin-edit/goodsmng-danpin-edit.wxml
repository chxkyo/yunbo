<view class="bgf9" style='height:20rpx;'></view>
<view class="editcuisine-wrap">

   <view class="input-view-item">
    <view class="input-label-box">
      <label for="danping-name">名称</label>
    </view>
    <view class="label-right-box">
      <input class="weui-input" placeholder="请输入单品名称" placeholder-style='color:#eee;font-size:32rpx;' id="danping-name" type="text" bindinput="getName" value="{{name}}"/>
    </view>
  </view>
      <view class="input-view-item" style="padding:30rpx 0;">
          <view class="input-label-box">
            <label for="goods-category">所属分类</label>
          </view>
          <view class="label-right-box">
            <input class="weui-input" placeholder-style='color:#eee;font-size:32rpx;' id="meal-price" type="text"  value="{{productCategoryName}}" disabled='true'/>
          </view>
      </view>
  <view class="input-view-item">
    <view class="input-label-box">
      <label for="danping-price">单价</label>
    </view>
    <view class="label-right-box">
      <input class="weui-input" placeholder="请输入单价" placeholder-style='color:#eee;font-size:32rpx;' id="danping-price" type="digit" bindinput="getPrcie" value="{{price}}"/>
    </view>
  </view>
      <view class="input-view-item" style="padding:30rpx 0;">
          <view class="input-label-box">
            <label for="danping-unit">单位</label>
          </view>
          <view class="label-right-box">
      <input class="weui-input" placeholder="请输入单位" placeholder-style='color:#eee;font-size:32rpx;' id="danping-unit" type="number" bindinput="getUnit" value="{{unit}}"/>
          </view>
      </view>
  <view class="input-view-item">
    <view class="input-label-box">
      <label for="danping-discount">折扣</label>
    </view>
    <view class="label-right-box">
      <input class="weui-input" placeholder="请输入折扣" placeholder-style='color:#eee;font-size:32rpx;' id="danping-discount" type="digit" bindinput="getDiscount" value="{{discount}}"/>
    </view>
  </view>

    <view class="save-btn-wrap edit-cuisine-wrap">
    <button class="save-meal-btn confirm-btn" type="primary" hover-class="none" bindtap="saveDanPin">保存</button> 
    <button class="save-meal-btn del-btn" type="primary" hover-class="none" bindtap='delThisMeal'>删除</button>
   </view>
</view>