<view class="bgf9" style='height:20rpx;'></view>
<view class="editcuisine-wrap">

  <view class="input-view-item">
    <view class="input-label-box">
      <label for="classsify-name">分类名称</label>
    </view>
    <view class="label-right-box">
      <input class="weui-input" placeholder="请输入分类名称" placeholder-style='color:#eee;font-size:32rpx;' id="classsify-nam" type="text" bindinput="getGoodsClassifyName" value=""/>
    </view>
  </view>
  <view class="input-view-item">
    <view class="input-label-box">
      <label for="classsify-discount">分类折扣（%）</label>
    </view>
    <view class="label-right-box">
      <input class="weui-input" placeholder="请输入分类折扣" placeholder-style='color:#eee;font-size:32rpx;' id="classsify-discount" type="digit" bindinput="getGoodsClassifyDiscount" value=""/>
    </view>
  </view>

  <view class="save-btn-wrap">
    <button class="save-meal-btn confirm-btn f1" type="primary" hover-class="none" bindtap="saveClassify">保存</button> 
   </view>
</view>