<view class="bgf9" style='height:20rpx;'></view>
<view class="editcuisine-wrap">

  <view class="input-view-item">
    <view class="input-label-box">
      <label for="meal-name">支付名称</label>
    </view>
    <view class="label-right-box">
      <input class="weui-input" placeholder="请输入打印机名称" placeholder-style='color:#eee;font-size:32rpx;' id="meal-name" type="text" bindinput="getMealName" value="招行90抵100"/>
    </view>
  </view>
    <picker bindchange="bindCategoryPickerChange" value="{{goodsCategoryIndex}}" range="{{goodsCategoryArr}}">
      <view class="input-view-item" style="padding:30rpx 0;">
          <view class="input-label-box">
            <label for="goods-category">支付类型</label>
          </view>
          <view class="label-right-box">
            <view class="all-cuisine ws ell"><text>代金券</text></view>
            <view class="jumpAddCuisine-a">
              <image src="../../images/img/to.png" class="arrow-right-icon"></image>
            </view>
          </view>
      </view>
    </picker>

  <view class="input-view-item">
    <view class="input-label-box">
      <label for="meal-price">折扣金额（元）</label>
    </view>
    <view class="label-right-box">
      <input class="weui-input" placeholder="请输入折扣金额" placeholder-style='color:#eee;font-size:32rpx;' id="meal-price" type="digit" bindinput="getMealPrcie" value="100"/>
    </view>
  </view>

  <view class="input-view-item">
    <view class="input-label-box">
      <label for="meal-discount">实收金额（元）</label>
    </view>
    <view class="label-right-box">
      <input class="weui-input" placeholder="请输入实收金额" placeholder-style='color:#eee;font-size:32rpx;' id="meal-discount" type="digit" bindinput="getMealDiscount" value="90"/>
    </view>
  </view>
  <view class="input-view-item">
    <view class="input-label-box">
      <label for="meal-discount">说明</label>
    </view>
    <view class="label-right-box">
      <input class="weui-input" placeholder="" placeholder-style='color:#eee;font-size:32rpx;' id="meal-discount" type="digit" bindinput="getMealDiscount" value=""/>
    </view>
  </view>

    <view class="save-btn-wrap edit-cuisine-wrap">
    <button class="save-meal-btn confirm-btn" type="primary" hover-class="none" bindtap="saveMeal">保存</button> 
    <button class="save-meal-btn del-btn" type="primary" hover-class="none" bindtap='delThisMeal'>删除</button>
   </view>
</view>