/* pages/parkpayment/parkpayment.wxss */
page{
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
}
.park-head{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.park-head-left{
  width: 140rpx;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.picker{
  display: flex;
  justify-content: center;
  align-items: center;
}
.triangle_down{
  width:0;
  height:0;
  border-width:5px 5px 0;
  border-style:solid;
  border-color:#afaca6 transparent transparent;
  margin-left: 10rpx;
}
.park-head-mid{
  width: 330rpx;
  height: 80rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.park-head-right{
  width: 160rpx;
  height: 80rpx;
  background: #ccc;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}
.redBg{
  background: #e71a28
}
.park-mid{
  width: 100%;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.park-mid-head{
  font-size: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 50rpx;
}
.park-mid-item{
  padding: 50rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center; 
}
.park-mid-itemLeft{
  font-size: 30rpx;
}
.park-mid-itemRight{
  font-size: 30rpx;
  font-weight: bold;
}
.redColor{
  color: #e71a28;
}
.park-foot{
  width: 90%;
  height: 100rpx;
  color: #fff;
  font-size: 34rpx;
  background: #e71a28;
  border-radius: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}
.tips{
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #e71a28;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tips image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}