/* pages/pointsmall/goodconvert/goodconvert.wxss */
page{
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
}
.goodconvert-head{
  margin-bottom: 30rpx;
}
.record{
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.record-left{
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #eee;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-right: 30rpx;
  overflow: hidden;
}
.record-left image{
  width: 100%;
  height: 100%;
}
.record-mid{
  width: 300rpx;
}
.record-mid-title{
  font-size: 33rpx;
}
.record-mid-points{
  font-size: 24rpx;
  color: #e72427;
  margin: 40rpx 0 20rpx 0;
}
.record-mid-num{
  font-size: 24rpx;
  color: #999;
}
.record-right{
  width: 300rpx;
  height: 160rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}
.goodconvert-con{
  width: 100%;
  background: #fff;
}
.goodconvert-conItem{
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.goodconvert-conItem-left{
  width: 30%;
}
.goodconvert-conItem-right{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.goodconvert-conItem-right input{
  text-align: right;
}
.btns{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.btn{
  width: 50rpx;
  height: 50rpx;
  background: #eee;
  font-size: 34rpx;
  color: #d2d2d2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.num{
  width: 80rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.total text{
  color: #e72427;
}
.goodconvert-foot{
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  position: fixed;
  bottom: 0;
}
.goodconvert-footLeft{
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
}
.goodconvert-footRight{
  height: 100rpx;
  flex: 0 0 200rpx;
  background: #e72427;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.date{
  margin-right: 20rpx;
}