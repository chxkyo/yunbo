/* pages/marketdetail/marketdetail.wxss */
page{
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
}
.marketdetail-head{
  width: 100%;
}
.marketdetail-head-top{
  width: 100%;
  height: 400rpx;
}
.marketdetail-head-top image{
  width: 100%;
}
.marketdetail-head-bot{
  padding: 30rpx;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.marketdetail-head-botLeft{
  width: 140rpx;
  height: 140rpx;
  padding: 15rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 10rpx 2rpx rgba(0,0,0,0.1);
  overflow: hidden;
  margin-right: 20rpx;
  transform: translateY(-30rpx);
  background: #fff;
}
.marketdetail-head-botLeft image{
  width: 100%;
  height: 100%;
}
.marketdetail-head-botMid{
  width: 360rpx;
  font-size: 30rpx;
}
.marketdetail-head-botRight{
  width: 170rpx;
  height: 60rpx;
  font-size: 30rpx;
  border: 2rpx solid #999999;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100rpx;
}
.marketdetail-head-botRight image{
  width: 25rpx;
  height: 18rpx;
  margin-right: 15rpx;
}
.marketdetail-head-botRight text{
  margin-right: 15rpx;
  font-size: 40rpx;
}
.marketdetail-mid{
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  background: #fff;
}
.marketdetail-mid-item{
  padding: 30rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}
.marketdetail-mid-item:last-child{
  border-bottom: none;
}
.marketdetail-mid-itemLeft{
  width: 35rpx;
  height: 35rpx;
}
.marketdetail-mid-itemLeft image{
  width: 100%;
  height: 100%;
}
.marketdetail-mid-itemRight{
  font-size: 30rpx;
}
.marketdetail-foot{
  margin-bottom: 20rpx;
}
.marketdetail-foot-head{
  padding: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: flex;
  justify-content: center;
  align-items: centere;
}
.marketdetail-foot-head image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.marketdetail-foot-con{
  padding: 30rpx;
  background: #fff;
  font-size: 26rpx;
  line-height: 1.6;
}